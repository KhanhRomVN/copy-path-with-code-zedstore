# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation for Rust files
[*.rs]
indent_style = space
indent_size = 4
max_line_length = 100

# 2 space indentation for TOML files
[*.toml]
indent_style = space
indent_size = 2

# 2 space indentation for Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# 2 space indentation for JSON files
[*.json]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Makefiles always use tabs
[Makefile]
indent_style = tab

# Batch files (Windows)
[*.{bat,cmd}]
end_of_line = crlf
